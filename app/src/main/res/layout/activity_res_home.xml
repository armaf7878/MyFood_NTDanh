<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResOwner_NTDanh.Res_Home"
    android:background="@color/app_background">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/font_normal"
        android:text="Restaurant Name"
        android:textAlignment="center"
        android:textColor="@color/text_color_white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ResOrder_NTDanh"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="25dp"
                android:backgroundTint="@color/back_ground_gray"
                android:fontFamily="@font/font_normal"
                android:text="Order"
                android:textSize="25sp"
                app:cornerRadius="12dp"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ResFood_NTDanh"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="25dp"
                android:backgroundTint="@color/back_ground_gray"
                android:fontFamily="@font/font_normal"
                android:text="Food"
                android:textSize="25sp"
                app:cornerRadius="12dp"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ResInformation_NTDanh"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/back_ground_gray"
            android:fontFamily="@font/font_normal"
            android:text="Information"
            android:textSize="25sp"
            app:cornerRadius="12dp"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_foodName_NTDanh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/font_normal"
            android:text="Food Name"
            android:textColor="@color/text_color_white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txt_quantity_NTDanh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/font_normal"
            android:text="2"
            android:textAlignment="textEnd"
            android:textColor="@color/text_color_white"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout14">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_Deny_NTDanh"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/hint_color_gray"
            android:text="Deny"
            android:layout_marginRight="10dp"
            android:textColor="@color/text_color_white"
            android:fontFamily="@font/font_normal"
            android:textStyle="bold"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_Approve_NTDanh"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/text_color_white"
            android:text="Approve"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_color_black"
            android:fontFamily="@font/font_normal"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>